<%= form_with model: @activity do |f| %>

<%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.label :name %>
    <%= f.text_field :name, :value => @activity.name %>

    <%= f.label :duration %>
    <%= f.text_field :duration, :value => @activity.duration %>

    <%= f.label :notes %>
    <%= f.text_field :notes, :value => @activity.notes %>

    <%= f.submit %>


<% end %>