<%= form_for @activity do |f| %>

<%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.label :name %>
    <%= f.text_field :name, :value => @activity.name %>

    <%= f.label :duration %>
    <%= f.text_field :duration, :value => @activity.duration %>

    <%= f.label :notes %>
    <%= f.text_field :notes, :value => @activity.notes %>

    <%= f.collection_select(:category_id, @categories, :id, :name) %>


    <%= f.submit %>


<% end %>